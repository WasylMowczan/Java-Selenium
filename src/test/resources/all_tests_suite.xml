<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="ALL Pet Store Tests" parallel="tests" thread-count="2">
    
    <listeners>
        <listener class-name="Selenium_Framework.utils.testng.listeners.TestListener"></listener>
        <listener class-name="Selenium_Framework.utils.testng.listeners.AnnotationTransformer"></listener>
    </listeners>
    
    <test name="Negative Login Tests">
        <parameter name="browser" value="CHROME"></parameter>
        <classes>
            <class name="Selenium_Framework.tests.FailedLoginTest"/>
        </classes>
    </test>

    <test name="Positive Login Tests">
        <parameter name="browser" value="CHROME"></parameter>
        <classes>
            <class name="Selenium_Framework.tests.PositiveLoginTests"/>
        </classes>
    </test>
</suite>